      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.033</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
		  <statOffsets>
				<CancerRate>-0.99</CancerRate>
		  </statOffsets>
        </li>

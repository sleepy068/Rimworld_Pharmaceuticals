<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugBase">
    <defName>SLP_Daywake</defName>
    <label>daywake</label>
    <description></description>
    <descriptionHyperlinks>
      <HediffDef>DaywakeHigh</HediffDef>
	  <HediffDef>DaywakeTolerance</HediffDef>
      <HediffDef>DaywakeAddiction</HediffDef>
	  <HediffDef>ChemicalDamageSevere</HediffDef>
    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/SLP_Drug_Daywake</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
	  <drawSize>0.85</drawSize>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>400</WorkToMake>
      <MarketValue>43</MarketValue>
      <Mass>0.05</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <foodType>Processed</foodType>
      <drugCategory>Medical</drugCategory>
      <baseIngestTicks>100</baseIngestTicks>
      <ingestSound>Ingest_Pill</ingestSound>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>DaywakeHigh</hediffDef>
          <severity>0.75</severity>
          <toleranceChemical>Daywake</toleranceChemical>
        </li>
		<li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>DaywakeTolerance</hediffDef>
          <severity>0.04</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>-0.1</offset>
          <toleranceChemical>Daywake</toleranceChemical>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>SLP_SupportDrugs</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
      <soundWorking>Recipe_Drug</soundWorking>
    </recipeMaker>
    <costList>
	  <Neutroamine>1</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Daywake</chemical>
        <addictiveness>0.05</addictiveness>
        <existingAddictionSeverityOffset>0.30</existingAddictionSeverityOffset>
        <needLevelOffset>0.9</needLevelOffset>
        <listOrder>200</listOrder>
        <overdoseSeverityOffset>0.04~0.09</overdoseSeverityOffset>
        <largeOverdoseChance>0.0</largeOverdoseChance>
      </li>
    </comps>
  </ThingDef>
  
  <HediffDef>
    <defName>DaywakeHigh</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>alert on daywake</label>
    <labelNoun>a daywake high</labelNoun>
    <description>Daywake in the bloodstream. It is very effective at reducing fatigue.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.8</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
          <restFallFactor>0.50</restFallFactor>
          <capMods>
          </capMods>
        </li>
      </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>DaywakeHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>DaywakeHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>alert on daywake</label>
        <description>I feel alert. Feels like I can stay awake forever.</description>
        <baseMoodEffect>0</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  
  <!-- Milkleaf addiction -->

  <ChemicalDef>
    <defName>Milkleaf</defName>
    <label>milkleaf</label>
    <addictionHediff>MilkleafAddiction</addictionHediff>
  </ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Milkleaf</defName>
    <needClass>Need_Chemical</needClass>
    <label>milkleaf</label>
    <description>Because of a milkleaf addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <fallPerDay>0.333</fallPerDay>
    <listPriority>45</listPriority>
  </NeedDef>

  <HediffDef ParentName="AddictionBase">
    <defName>MilkleafAddiction</defName>
    <label>milkleaf addiction</label>
    <description>A chemical addiction to milkleaf. Long-term presence of milkleaf has caused neurological adaptations at the cellular level, so the brain can no longer function properly without the drug.
\nWithout regular doses of milkleaf, withdrawal symptoms will begin. However, extended abstinence will force the brain to adapt back to its normal state, resolving the addiction.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <causesNeed>Chemical_Milkleaf</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.045</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <restFallFactorOffset>0.2</restFallFactorOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.30</offset>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>Binging_DrugExtreme</mentalState>
            <mtbDays>60</mtbDays>
          </li>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>20</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
    </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>MilkleafWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>MilkleafAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>Milkleaf withdrawal</label>
        <description>I feel so tired and heavy. I can't stop thinking about milkleaf. I feel like I can't breathe. I just want to feel normal again and I'd do almost anything to make that happen...</description>
        <baseMoodEffect>-35</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>MilkleafTolerance</defName>
    <label>milkleaf tolerance</label>
    <description>A built-up tolerance to milkleaf. The more severe this tolerance is, the more milkleaf it takes to get the same effect.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.015</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Milkleaf</chemical>
      </li>
    </comps>
    <hediffGivers>
      <li Class="HediffGiver_RandomDrugEffect">
        <hediff>ChemicalDamageModerate</hediff>
        <severityToMtbDaysCurve>
          <points>
            <li>(0.45, 99999)</li>
            <li>(0.5, 240)</li>
            <li>(1, 180)</li>
          </points>
        </severityToMtbDaysCurve>
        <partsToAffect>
          <li>Brain</li>
        </partsToAffect>
      </li>
	  <li Class="HediffGiver_RandomDrugEffect">
        <hediff>ChemicalDamageModerate</hediff>
        <severityToMtbDaysCurve>
          <points>
            <li>(0.45, 99999)</li>
            <li>(0.5, 120)</li>
            <li>(1, 90)</li>
          </points>
        </severityToMtbDaysCurve>
        <partsToAffect>
          <li>Kidney</li>
        </partsToAffect>
      </li>
    </hediffGivers>
  </HediffDef>

  
</Defs>
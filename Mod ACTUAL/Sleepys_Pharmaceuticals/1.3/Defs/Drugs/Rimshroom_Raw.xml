<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="DrugBase">
    <defName>SLP_RawRimshroom</defName>
    <label>rimshroom</label>
    <description>A small, nondescript mushroom. When consumed the mushroom produces a psychedelic high.</description>
    <descriptionHyperlinks>
      <HediffDef>RimshroomHigh</HediffDef>
	  <HediffDef>RimshroomTolerance</HediffDef>
    </descriptionHyperlinks>
    <tradeability>Sellable</tradeability>
    <socialPropernessMatters>true</socialPropernessMatters>
    <tickerType>Rare</tickerType>
    <graphicData>
      <texPath>Things/Item/Drug/SLP_Drug_RawRimshroom</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2</MarketValue>
      <Mass>0.1</Mass>
      <DeteriorationRate>4</DeteriorationRate>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <techLevel>Neolithic</techLevel>
    <ingestible>
      <baseIngestTicks>80</baseIngestTicks>
      <chairSearchRadius>4</chairSearchRadius>
      <preferability>DesperateOnly</preferability>
      <tasteThought></tasteThought>
      <foodType>VegetableOrFruit</foodType>
      <joyKind>Chemical</joyKind>
      <joy>0.6</joy>
      <nurseable>true</nurseable>
      <drugCategory>Social</drugCategory>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RimshroomHigh</hediffDef>
          <severity>0.50</severity>
          <toleranceChemical>Rimshroom</toleranceChemical>
        </li>
		<li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RimshroomTolerance</hediffDef>
          <severity>0.25</severity>
          <divideByBodySize>true</divideByBodySize>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>30</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
      <li Class="CompProperties_Drug">
        <chemical>Rimshroom</chemical>
        <addictiveness>0.0</addictiveness>
        <minToleranceToAddict>1.00</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.1</existingAddictionSeverityOffset>
        <needLevelOffset>0.9</needLevelOffset>
        <listOrder>30</listOrder>
      </li>
    </comps>
    <allowedArchonexusCount>20</allowedArchonexusCount>
  </ThingDef>

  <HediffDef>
    <defName>RimshroomHigh</defName>
    <label>rimshroom high</label>
    <description>Psychedelic chemicals in the bloodstream. It lifts the mood.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.5</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
        <li>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.30</offset>
            </li>
          </capMods>
        </li>
      </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>RimshroomHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RimshroomHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>rimshroom</label>
        <description>I feel like I can taste colours!</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Rimshroom addiction -->
  <!-- No addiction, just seems the code needs it defined -->
  
  <ChemicalDef>
    <defName>Rimshroom</defName>
    <label>rimshroom</label>
    <addictionHediff>RimshroomAddiction</addictionHediff>
    <toleranceHediff>RimshroomTolerance</toleranceHediff>
    <onGeneratedAddictedToleranceChance>0.8</onGeneratedAddictedToleranceChance>
  </ChemicalDef>
  
  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Rimshroom</defName>
    <needClass>Need_Chemical</needClass>
    <label>rimshroom</label>
    <description>Because of an rimshroom addiction, this person needs to regularly consume rimshroom to avoid withdrawal symptoms.</description>
    <listPriority>20</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>RimshroomTolerance</defName>
    <label>rimshroom tolerance</label>
    <description>A built-up tolerance to rimshroom. The more severe this tolerance is, the more rimshroom it takes to get the same effect.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.070</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Rimshroom</chemical>
      </li>
    </comps>
  </HediffDef>
  
  <HediffDef ParentName="AddictionBase">
    <defName>RimshroomAddiction</defName>
    <label>rimshroom addiction</label>
    <description>A chemical addiction to rimshroom. Long-term presence of rimshroom has caused neurological adaptations at the cellular level, so the brain can no longer function properly without the drug.
\nWithout regular doses of rimshroom, withdrawal symptoms will begin. However, extended abstinence will force the brain to adapt back to its normal state, resolving the addiction.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <causesNeed>Chemical_Rimshroom</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.1</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>RimshroomWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RimshroomAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>rimshroom withdrawal</label>
        <description>Placeholder</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
